<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <TextView
        android:text="Ticket Details"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white" />

    <View
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/view3" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_ticket_eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Event Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/view3"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="VENUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView22"
        android:layout_below="@+id/tv_ticket_eventName"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_ticket_location"
        android:text="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView22" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:text="TICKET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_ticket_location"
        android:id="@+id/textView13" />


    <TextView
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_ticket_type_price"
        android:text="Ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:text="Ticket No."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_ticket_type_price"
        android:layout_alignParentStart="true"
        android:id="@+id/textView14" />

    <TextView
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_ticket_no_purchased"
        android:text="Card No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:text="Hyper Card No."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_ticket_no_purchased"
        android:layout_alignParentStart="true"
        android:id="@+id/textView15" />

    <TextView
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_ticket_hypercardnumber"
        android:text="Card No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:text="Date of Purchased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_ticket_hypercardnumber"
        android:layout_alignParentStart="true"
        android:id="@+id/textView16" />

    <TextView
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_ticket_dateofpurchased"
        android:text="Date of Purchased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="Present your ticket at the venue of the event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv_ticket_dateofpurchased"
        android:layout_alignParentStart="true"
        android:id="@+id/textView17" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

</RelativeLayout>